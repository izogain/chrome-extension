{
  "name": "Streamable",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "homepage_url": "http://streamable.com",
  "icons": {
    "16": "icons/logo128-on.png",
    "48": "icons/logo128-on.png",
    "128": "icons/logo128-on.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/jquery.js",
      "src/bg/background.js"
    ]
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/logo128-off.png",
    "default_title": "browser action demo"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "webRequest",
    "contextMenus",
    "notifications",
    "tabs",
    "http://*.ttvnw.net/*",
    "http://*.twitch.tv/*",
    "http://*.streamable.com/*",
    "<all_urls>"
  ],
  "omnibox": {
    "keyword": "streamclip"
  },
  "web_accessible_resources": ["*"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/bg/jquery.js",
        "src/inject/inject.js"
      ]
    }
  ]
}